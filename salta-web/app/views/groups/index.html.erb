<table>
  <tr>
    <td>ID</td>
    <td>Name</td>
    <td>Total Members</td>
  </tr>
  <% @groups.each do |group| %>
      <tr>
        <td><%= group.id %></td>
        <td><%= link_to group.name, group_path(group) %></td>
        <td><%= group.contacts.size %></td>
      </tr>
  <% end %>
</table>
<%= link_to 'New Group', new_group_path if permitted_to?(:new, :groups)%>